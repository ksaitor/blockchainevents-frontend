@import '../../styles/variables.styl'

.LandingPage .ui
  h1
    margin-bottom 0
    @media mobilePhones
      font-size 2.7em
    .cityName
      cursor pointer
      display inline-block
      border-bottom 3px solid transparent
      transition border-color .3s
      border-radius 8px
      transition-property padding, box-shadow, background-color, margin
      transition-duration Speed
      transition-timing-function ease-out
      padding 0 0.4em
      margin-left -0.4em
      box-shadow 0px 10px 15px #ddd
      &:hover
        background-color white
        box-shadow -5px 30px 55px #aaa
        filter scale(1.2)

  h2
    margin-top 6vh
    color grey

  .subscribe.input
    margin-bottom 5vh
    borderWidth = 3px
    *
      border-width borderWidth
      font-weight bold
      @media mobilePhones
        font-size 0.85em
    input, input:focus
      border-color #5BBD72
      margin-right - borderWidth

  .ui.ordered.steps
    margin-bottom 5vh
    text-align left


  .typed
    display inline-block
    min-height 1em
    margin-left 0.5em


.Events
  background-color white


.EventPreview
  display block
  padding 1rem
  &:hover
    background-color yellow
