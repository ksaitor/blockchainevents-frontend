html, body
  height auto!important

html
  background-color #ebebeb

body
  height auto

h1.ui.header
  font-family 'Titillium Web', sans-serif
  font-weight 900
  font-size 4rem
  padding-top 5vh

.logo
  opacity 0.9
  transition Speed opacity
  &:hover, &.hover
    opacity 1
    color black

.hide
  display none!important


strikethrough, .strikethrough
  text-decoration line-through

.cursor-not-allowed
  cursor not-allowed!important

.text.white
  color #FFFFFF
.text.grey
  color #CCCCCC
.text.black
  color #1B1C1D
.text.yellow
  color #F2C61F
.text.teal
  color #00B5AD
.text.red
  color #D95C5C
.text.purple
  color #564F8A
.text.pink
  color #D9499A
.text.orange
  color #E07B53
.text.green
  color #5BBD72
.text.blue
  color #3B83C0
.text.dark-blue
  color darken(#3B83C0, 15%)
